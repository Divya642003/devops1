pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout source code from your repository
                checkout scm
            }
        }
        
        stage('Build Docker Image') {
            steps {
                // Build Docker image
                script {
                    docker.build('your-docker-image-name:latest', './path/to/Dockerfile')
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                // Run tests inside Docker container
                script {
                    docker.image('your-docker-image-name:latest').inside {
                        sh 'echo "Running tests inside Docker container"'
                        // Add your test execution commands here
                        // Example: sh 'pytest' or 'npm test'
                    }
                }
            }
        }
        
        stage('Publish Test Results') {
            steps {
                // Publish test results (assuming JUnit format)
                junit '**/target/*.xml'
            }
        }
    }
}
